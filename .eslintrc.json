{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    
    "extends": "eslint:recommended",
    "overrides": [
        {
          "files": [
            "**/*.test.js"
          ],
          "env": {
            "jest": true // now **/*.test.js files' env has both es6 *and* jest
          },
          // Can't extend in overrides: https://github.com/eslint/eslint/issues/8813
          // "extends": ["plugin:jest/recommended"]
          "plugins": ["jest"],
          "rules": {

          }
        }
      ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins":["jest"],
    "rules": {
        "no-unused-vars": "off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
